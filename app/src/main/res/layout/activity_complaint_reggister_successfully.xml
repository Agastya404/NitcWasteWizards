<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplaintReggisterSuccessfully"
    android:background="@drawable/app_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/complaintDetail"
        android:layout_width="376dp"
        android:layout_height="180dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/succcessfulMsg2"
        android:layout_width="242dp"
        android:layout_height="115dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:layout_marginLeft="100dp"
        android:inputType="textPersonName"
        android:text="Complaint"

        android:textColor="#E0EDEA"
        android:textSize="35dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/succcessfulMsg"
        android:layout_width="378dp"
        android:layout_height="185dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Registered Sucessfully"

        android:textColor="#E0EDEA"
        android:textSize="30dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="168dp"
        android:layout_height="126dp"
        android:layout_below="@+id/complaintDetail"
        android:layout_alignStart="@+id/complaintDetail"
        android:layout_marginStart="69dp"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/tickmark" />

</RelativeLayout>