<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendcomplaintbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostComplaintPage"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="86dp"
        android:backgroundTint="@color/green"
        android:text="Post Compliant"
        android:textColor="@color/white"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/writeincompliantbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/writeincompliantbox"
        android:layout_width="355dp"
        android:layout_height="107dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rectangle_edit_text"
        android:backgroundTint="@color/green"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Describe Complaint Here*"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/complaintinarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <EditText
        android:id="@+id/complaintinarea"
        android:layout_width="349dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/rectangle_edit_text"

        android:backgroundTint="@color/green"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Area(Address)*"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/complaintarealandmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeincompliantbox" />

    <EditText
        android:id="@+id/complaintarealandmark"
        android:layout_width="344dp"
        android:layout_height="43dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/rectangle_edit_text"
        android:backgroundTint="@color/green"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Landmark"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/send_complaint_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complaintinarea" />

    <Button
        android:id="@+id/send_complaint_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="129dp"
        android:background="@drawable/rounded_button"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complaintarealandmark" />

</androidx.constraintlayout.widget.ConstraintLayout>