<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendcomplaintbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostComplaintPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Post Compliant"
        android:textColor="@color/black"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/writeincompliantbox"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Describe Complaint Here"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/complaintinarea"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Area(Address)"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeincompliantbox" />


    <EditText
        android:id="@+id/complaintarealandmark"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="249dp"
        android:layout_marginBottom="249dp"
        android:background="@drawable/rectangle_edit_text"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Landmark"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/writeincompliantbox" />

    <Button
        android:id="@+id/button4"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@drawable/rounded_button"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complaintarealandmark" />

</androidx.constraintlayout.widget.ConstraintLayout>